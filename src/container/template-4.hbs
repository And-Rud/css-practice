<header class="header row g-0">
    <div class="col-3">
        {{> logo}}
    </div>
    <nav class="header_nav col-9">
        <div class="header_nav_right">
            {{> nav list=header }}
        </div>
    </nav>
</header>

{{#with main}}
<main class="main">
    <img src="{{image}}" alt="Hero image" class="main_photo">
    <div class="main_content">
        <h1 class="main_title">{{heading}}</h1>
        <p class="main_text">{{descriotion}}</p>
        <a href="{{href}}" class="main_button">{{button}}</a>
    </div>
</main>
{{/with}}

<div class="featured">
    {{#each featured}}
    {{>card-featured data=this}}
    {{/each}}
</div>


<div class="form">
    {{#each actions}}
    <div class="form_item">
        <h3 class="form_title">{{heading}}</h3>
        <a href="{{url}}" class="form_button">{{text}}</a>
    </div>
    {{/each}}
</div>



<footer class="footer">
    <div>
        {{> logo}}
        <span class="footer_copyright">Copyright 2023-2024</span>
    </div>
    {{#each footer}}
    <div>
        <span class="footer_title">{{title}}</span>
        {{>nav list=links isVertical=true}}
    </div>
    {{/each}}
</footer>