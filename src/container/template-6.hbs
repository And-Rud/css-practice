<div class="page_content">
    <header class="header row g-0">
        <div class="col-3">
            {{> logo}}
        </div>
        <nav class="header_nav col-9">
            <div class="header_nav_right">
                {{> nav list=header }}
            </div>
        </nav>
    </header>
    <div class="hero">
        <main class="main">
            {{#with info}}
            <div class="messages">
                <h1 class="messages_title">{{title}}</h1>
                <p class="messages_text">{{description}}</p>
            </div>
            {{/with}}
            {{#with form}}
            <form class="form">
                <h2 class="form_title">{{title}}</h2>
                <div class="form_input_list">
                    {{#each inputs}}
                    <input type="{{type}}" placeholder="{{placeholder}}" class="form_input" name="{{name}}"
                        id="form_input-1">
                    {{/each}}
                </div>
                <div class="form_checkbox">
                    <input type="checkbox" name="{{checkbox.name}}" id="{{checkbox.name}}">
                    <div></div>
                    <label for="{{checkbox.name}}">{{checkbox.label}}</label>
                </div>
                <button type="submit" class="form_button">{{button}}</button>
                <div class="line"></div>
                <p class="form_info">{{info}}</p>
            </form>
            {{/with}}
        </main>
    </div>


    <div class="updates">
        {{#with updates}}
        <div class="updates_title">{{title}}</div>
        {{#each list}}
        <div class="updates_item">
            <div class="img">32x32</div>
            <div class="updates_block">
                <strong class="udpades_user">{{nickname}}</strong>
                <p class="updates_info">{{description}}</p>
            </div>
        </div>
        {{/each}}
        <div class="all_updates">
            <a href="{{show_all.url}}" class="all_updates_link">{{show_all.text}}</a>
        </div>
        {{/with}}
    </div>

    <div class="hot">{{expirience.badge}}</div>

    <div class="expierence">
        {{#with expirience}}
        <div class="exp_title">{{title}}</div>
        <div class="card">
            {{#each list}}
            <div class="card_item">
                <h2 class="exp_name">{{name}}</h2>
                <p class="exp_details">{{details}}</p>
            </div>
            {{/each}}
        </div>
        {{/with}}
    </div>

    <footer class="footer">
        <div>
            {{> logo}}
            <span class="footer_copyright">Copyright 2023-2024</span>
        </div>
        {{#each footer}}
        <div>
            <span class="footer_title">{{title}}</span>
            {{>nav list=links isVertical=true}}
        </div>
        {{/each}}
    </footer>
</div>